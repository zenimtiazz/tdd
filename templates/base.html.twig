<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}TestSymfony!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
    <div class="d-flex">
        <header class="row flex-column d-flex pt-5">
            <div class="col-1">
                <nav class="navbar nav-pills flex-column sidenav">
                    {% block menu %}
                    <a class="nav-item nav-link active" href="{{ path('showMyName') }}">Home</a> &nbsp;&nbsp;
                        <a class="nav-item nav-link" href="{{ path('about') }}">About</a>
                        <a class="nav-item nav-link" href="{{ path('master') }}">Capitalization</a>

                    {% endblock %}

                </nav>

            </div>
            <div class = "text-center">
                {% block footer %}
                    &copy;Becode
                {% endblock %}
            </div>

        </header>

        {% block body %}{% endblock %}

    </body>
</html>

                                <a class="nav-link" href="{{ path('book') }}">Login</a>
                            </li>
                            &nbsp;&nbsp;&nbsp;
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('new_room') }}">Book a room</a>
                            </li>
                        </ul>

                    </div>
                </nav>
            </div>


        </header>

